@model BookStore.UI.Models.LoginViewModel
@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Login</h1>
                    <form method="post" class="mt-3">
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control form-control-sm" id="email" asp-for="EmailAddress" placeholder="Enter your email" required>
                        </div>


                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control form-control-sm" id="password" asp-for="Password" placeholder="Enter your password" required>
                        </div>

                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-sm">Login</button>
                        </div>

                        
                        <div class="text-center mt-3">
                            <a href="#" class="text-decoration-none">Forgot password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>