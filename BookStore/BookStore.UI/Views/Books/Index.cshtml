@model IEnumerable<BookStore.UI.Models.DTO.BookDto>;

@{
}

<h1 class="mt-3">Books</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Books" asp-action="Add">Add book</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>CreatedDate</th>
            <th>AuthorName</th>
            <th>PriceInSYR</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Name</td>
                <td>@book.CreatedDate</td>
                <td>@book.AuthorName</td>
                <td>@book.PriceInSYR</td>
                <td>@book.Quantity</td>
                <td>
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-light">Edit</a>
                </td>

            </tr>

        }
    </tbody>
</table>

