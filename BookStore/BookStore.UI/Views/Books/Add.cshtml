@model BookStore.UI.Models.AddBookViewModel

@{
}



<h1 class="mt-3">Add Book</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Author Name</label>
        <input type="text" class="form-control" asp-for="AuthorName"/>
    </div>
    <div class="mt-3">
        <label class="form-label">CreatedDate</label>
        <input type="text" class="form-control" asp-for="CreatedDate"/>
    </div>
    <div class="mt-3">
        <label class="form-label">PriceInSYR</label>
        <input type="text" class="form-control" asp-for="PriceInSYR"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Quantiy</label>
        <input type="number" class="form-control" asp-for="Quantity"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            Save
        </button>
    </div>
</form>
